{
  "name": "vite-plugin-ember-experimental",
  "version": "0.0.0-wip.0",
  "repository": "https://github.com/lbdm44/vite-plugin-ember-experimental.git",
  "homepage": "https://github.com/lbdm44/vite-plugin-ember-experimental.git",
  "author": "lbdm44",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist",
    "types",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "build:watch": "rollup --config rollup.config.ts --configPlugin typescript -w",
    "release": "release-it",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/prompt-cli": "^17.0.3",
    "@rollup/plugin-typescript": "^8.3.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "release-it": "^15.2.0",
    "rollup": "^2.77.2",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "releaseNotes": null,
      "autoGenerate": true
    }
  },
  "volta": {
    "node": "16.16.0",
    "yarn": "1.22.19"
  }
}
