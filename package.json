{
  "name": "vite-plugin-ember-experimental",
  "version": "0.0.0-wip.0",
  "repository": "https://github.com/lbdm44/vite-plugin-ember-experimental.git",
  "homepage": "https://github.com/lbdm44/vite-plugin-ember-experimental.git",
  "author": "lbdm44",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "types": "lib/index",
  "files": [
    "lib",
    "types",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "clean": "rimraf lib",
    "release": "release-it",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/prompt-cli": "^17.0.3",
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/node": "^18.6.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "release-it": "^15.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.2",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vite-plugin-inspect": "^0.6.0"
  },
  "resolutions": {
    "esbuild": "0.14.53"
  },
  "@comment resolutions": {
    "esbuild": "The version of esbuild that Vite depends had a bug in it with regards to M1 Macs, pinning the dep so that we can continue to work on things before the fix is bubbled up into Vite directly"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "releaseNotes": null,
      "autoGenerate": true
    }
  },
  "volta": {
    "node": "16.16.0",
    "yarn": "1.22.19"
  }
}
